<!DOCTYPE html>
<html lang="zh-cn">

<head>
    <%- include('./head.ejs', {page: page}); %>
    <link rel="stylesheet" href="/stylesheets/admin.css">
</head>

<body>
    <main class="main">

    <nav class="site-nav">
        <div class="site-meta">
            <a href="/" class="brand" rel="start">
                <span class="site-title">管理员页面</span>
            </a>
        </div>
        <ul class="main-menu">
            <li><a href="/">ADMIN</a></li>
            <li><a href="/logout">退出登录</a></li>
        </ul>
    </nav>
    
    <div class="disable black-overlay"></div>
    <div class="disable check">
        <div class="notice">请确认操作</div>
        <div class="buttons">
            <button type="button" class="button cancel-button">取消</button>
            <button type="button" class="button ok-button">提交</button>
        </div>
    </div>

    <div class="main-container">
        <div class="guiding-area">
            <ul class="categories-tab-links">
                <li>
                    <a href="/admin/user/" class="categories-tab-link <% if (admin.active.user) { %> active <% } %>">
                        用户
                    </a>
                </li>
                <li>
                    <a href="/admin/problem/" class="categories-tab-link <% if (admin.active.problem) { %> active <% } %>">
                        问题
                    </a>
                </li>
                <li>
                    <a href="/admin/submit/" class="categories-tab-link <% if (admin.active.submit) { %> active <% } %>">
                        提交
                    </a>
                </li>
            </ul>
        </div>

        <div class="content-area">
            <%- admin.content %>
        </div>

    </div>

    <%- include('./footer.ejs', {config: config}); %>
    
    </main>
</body>

</html>